{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",  // Use ES Modules for compatibility with modern JS
    "moduleResolution": "node",
    "esModuleInterop": true,  // Ensure compatibility with CommonJS and ES Modules
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
